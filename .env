# ====================
# GitHub App Configuration (ОСНОВНЫЕ)
# ====================

# ID вашего GitHub App (настройки App → "About" → App ID)
GITHUB_APP_ID=123456

# Приватный ключ (скачанный .pem файл)
# ВАРИАНТ 1: В одну строку с \n (удобно для Docker/Heroku)
GITHUB_APP_PRIVATE_KEY="C:\\Users\\kasat\\Downloads\\fixissuesbot.2026-01-30.private-key.pem"

# ВАРИАНТ 2: Путь к файлу (удобно для VM)
GITHUB_APP_PRIVATE_KEY_PATH=/home/user/.ssh/github-app-private-key.pem

# Webhook secret (из настроек App → "Webhook" → Secret)
# ГЕНЕРИРУЕТСЯ ПРИ СОЗДАНИИ APP, ХРАНИТЕ БЕЗОПАСНО!
GITHUB_APP_WEBHOOK_SECRET=RandomStringBotFixRepo3001

# ====================
# Дополнительные настройки GitHub App
# ====================

# Для OAuth (если нужно)
GITHUB_APP_CLIENT_ID=your_client_id_here
GITHUB_APP_CLIENT_SECRET=your_client_secret_here

# ====================
# Настройки сервера
# ====================

# Порт для запуска приложения
PORT=5000

# Хост (обычно 0.0.0.0 для доступа снаружи)
HOST=0.0.0.0

# URL вашего приложения (для вебхука)
APP_URL=https://your-domain.com

# ====================
# Логирование и отладка
# ====================

# Уровень логирования
LOG_LEVEL=info

# Отладка webhook (логировать все события)
DEBUG_WEBHOOK=false